  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830386
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Node.js",
      "program": "${workspaceFolder}/src/index.ts",
      "request": "launch",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "file:${workspaceFolder}/src/index.html",
      "webRoot": "${workspaceFolder}"
    }

  ]
}
